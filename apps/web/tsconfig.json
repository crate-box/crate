{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
